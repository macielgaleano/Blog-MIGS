<!DOCTYPE html>
<html lang="en">
  <head>
    <%-include('./partials/head_view.ejs'); %> <%-
    include('./partials/nav.article.view.ejs') %>
    <div class="text-center mt-5">
      <%- include('./partials/create.view.ejs'); %>
    </div>
    
  </head>

  <body>
    <h2 class="m-5 display-5 text-center">Modificar / Borrar un articulo</h2>
    <div class="container">
      <% for (var i = 0; i < articles.length; i++) { %>
      <div class="row">
        <div class="col-2 mt-5 mb-5 center">
          <img
            class="img-fluid"
            src="<%- articles[i].imagen %>"
            alt=""
            srcset=""
          />
        </div>
        <div class="col-8 mt-5 center">
          <h2 class="display-5">
            <%- articles[i].id + ' - ' +articles[i].titulo %>
          </h2>
          <small class=""><%- articles[i].fecha_creacion %></small>
          <p class="lead mt-1 content-text">
            <%- articles[i].contenido.slice(0,150) + ' . . . '%>
          </p>
        </div>
        <div class="col-2 mt-5 mb-5 center">
          <a
            name=""
            id=""
            class="btn btn-admin mb-2 btn-primary"
            href="admin/<%=articles[i].id %>/modificar"
            role="button"
            >Modificar</a
          >
          <a
            name=""
            id=""
            class="btn btn-admin mb-2 btn-danger"
            href="admin/<%=articles[i].id %>/eliminar"
            role="button"
            >Eliminar</a
          >
          <a
            name=""
            id=""
            class="btn btn-admin btn-warning"
            href="articulo/<%=articles[i].id %>"
            role="button"
            >Ver articulo</a
          >
        </div>
      </div>
      <% } %>
    </div>
    <%- include('./partials/end-body_view.ejs'); %>
  </body>
</html>
