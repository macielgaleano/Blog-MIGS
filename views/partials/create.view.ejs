<div class="grey">
  <div class="container">
    <div class="row">
      <div class="col-6 center">
        <form
          action="/admin/crearArticulo"
          method="POST"
          enctype="multipart/form-data"
          class=""
        >
          <h2 class="m-5 display-5 text-center">Crear un articulo</h2>
          <div class="form-group">
            <label for="title">Titulo</label>
            <input
              type="text"
              class="form-control mb-3"
              name="title"
              id="title"
              aria-describedby="helpId"
              placeholder="Ingrese un titulo..."
            />
            <label for="contenido">Contenido</label>
            <textarea
              class="form-control mb-3"
              name="contenido"
              id="contenido"
              rows="5"
              placeholder="Ingrese contenido..."
            ></textarea>
            <label for="date">Fecha</label>
            <input
              class="form-control mb-3"
              type="datetime-local"
              name="date"
              id="date"
            />
            <label for="image">Seleccion una imagen</label>
            <input
              type="file"
              class="form-control-file"
              name="img"
              id="image"
              placeholder=""
              aria-describedby="fileHelpId"
            />
            <small id="fileHelpId" class="form-text text-muted mb-5"
              >Inserte un archivo JPG o PNG</small
            >
            <div class="row mt-3">
              <div class="col-3">
                <div class="dropdown">
                  <button
                    class="btn btn-secondary dropdown-toggle"
                    type="button"
                    id="dropdownMenuButton"
                    data-toggle="dropdown"
                    aria-haspopup="true"
                    aria-expanded="false"
                  >
                    Autores
                  </button>
                  <div
                    class="dropdown-menu"
                    id="selected"
                    aria-labelledby="dropdownMenuButton"
                  >
                    <% for (var i = 0; i < authors.length; i++) { %>
                    <div class="dropdown-item" id="">
                      <div class="row">
                        <div class="col-8">
                          <p id="selected">
                            <%- authors[i].id + ' - ' + authors[i].nombre + ' ' +
                            authors[i].apellido%>
                          </p>
                        </div>
                      </div>
                    </div>
                    <% } %>
                  </div>
                </div>
              </div>
  
              <div class="col-4">
                <a
                  name="add-author"
                  id="btnModal"
                  class="btn btn-secondary"
                  role="button"
                  >+ Agregar Autor</a
                >
              </div>
  
              <div class="col-5">
                <input
                  type="text"
                  class="form-control mb-3"
                  name="id"
                  id="id_input"
                  aria-describedby="helpId"
                  placeholder="ID..."
                />
              </div>
            </div>
            <button
              name=""
              id=""
              class="btn btn-success p-2 mt-4"
              href=""
              type="submit"
              role="button"
            >
              Crear articulo
            </button>
          </div>
        </form>
        <div id="myModal" class="modal">
          <div class="container">
            <div class="modal-content">
              <div class="">
                <h2 class="title text-center">Agregar autor</h2>
                <form action="/admin/crearAutor" method="POST" class="row center">
                  <div class="col-2"></div>
                  <div class="col-8 mt-3 mb-3">
                    <label for="name">Nombre</label>
                    <input
                      type="text"
                      class="form-control mb-3"
                      name="name"
                      id="name"
                      aria-describedby="helpId"
                      placeholder="Ingrese un nombre..."
                    />
                    <label for="name">Apellido</label>
                    <input
                      type="text"
                      class="form-control mb-3"
                      name="surname"
                      id="surname"
                      aria-describedby="helpId"
                      placeholder="Ingrese un apellido..."
                    />
                    <label for="email">Email</label>
                    <input
                      type="email"
                      class="form-control mb-3"
                      name="email"
                      id="email"
                      aria-describedby="helpId"
                      placeholder="Ingrese un email..."
                    />
                    <div class="botones">
                      <button
                        name=""
                        id=""
                        type="submit"
                        class="close btn"
                        role="button"
                      >
                        Agregar autor
                      </button>
                      <button name="" id="" class="close btn" role="button">
                        Cancelar
                      </button>
                    </div>
                  </div>
                  <div class="col-2"></div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

